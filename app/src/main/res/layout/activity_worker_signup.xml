<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivities.worker_signupActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ic_registrtion_btn_desin"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="Kosha"
        android:textColor="@color/white"
        android:textSize="50dp">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:elevation="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/location_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="City /State ">

            </EditText>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:id="@+id/radioGroup_id">

                <RadioButton
                    android:id="@+id/plumberRb_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plumber"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/electricRb_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Electrician" />

                <RadioButton
                    android:id="@+id/cleanerRb_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cleaner"/>

                <RadioButton
                    android:id="@+id/mechanicRb_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanic" />

                <RadioButton
                    android:id="@+id/carpenteRb_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Carpenter"/>

            </RadioGroup>

            <EditText
                android:id="@+id/phone_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="+91 Mobile number"
                android:maxLength="10">

            </EditText>

            <EditText
                android:id="@+id/aboutBio_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="About (max. 100 words) "
                android:inputType="textMultiLine"
                android:maxHeight="100dp"
                android:maxLength="100">

            </EditText>

            <Button
                android:id="@+id/createAccountBtn_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.1"
                android:background="@drawable/ic_registrtion_btn_desin"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:text="Create Account"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                android:foreground="?attr/selectableItemBackground"
                android:focusable="true"
                android:clickable="true">

            </Button>

            <ProgressBar
                android:id="@+id/progressBar_id2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/colorPrimary"
                android:visibility="invisible"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>